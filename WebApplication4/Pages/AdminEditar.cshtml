                                            <option>Cuenta 131</option>
                                            <option>Cuenta 204</option>
                                        </select>
                                        <input type="text" class="form-control m-3" id="formEditarSaldoCuenta" placeholder="saldo" />
                                        <input type="text" class="form-control m-3" id="formEditarInteresesCuenta" placeholder="intereses acumulados" />
                                        <input type="text" class="form-control m-3" id="formEditarDiaCorteCuenta" placeholder="día de corte" />
                                        <input type="text" class="form-control m-3" id="formEditarFechaCreacionCuenta" placeholder="fecha creación" />
                                        <select class="form-control" id="seleccionTipoCuentaEditarCuenta">
