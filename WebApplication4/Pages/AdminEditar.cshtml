    @*Cuentas*@
    <div class="card">
        <div class="card-header" id="headingCuentas">
            <h5 class="mb-0">
                <button class="btn btn-primary btn-lg btn-block collapsed" type="button" data-toggle="collapse" data-target="#collapseCuentas" aria-expanded="false" aria-controls="collapseCuentas">
                    Cuentas
                </button>
            </h5>
        </div>
        <div id="collapseCuentas" class="collapse" aria-labelledby="headingCuentas" data-parent="#accordionEditar">
            <div class="card-body">
                @*Tabla cuentas*@
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">ID Cuenta</th>
                            <th scope="col">ID Cliente</th>
                            <th scope="col">Saldo</th>
                            <th scope="col">Intereses acumulados</th>
                            <th scope="col">Fecha creación</th>
                            <th scope="col">Id tipo cuenta</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.cuenta) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdCuenta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdCliente)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Saldo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InteresesAcumulados)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaCreacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdTipoCuenta)
                            </td>

                        </tr>
                        }
                    </tbody>
                </table>

                @*CRUD cuentas*@
                <div id="accordionCRUDCuentas">
                    @*Agregar cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingAgregarCuenta">
                            <h5 class="mb-0">
