                                            <option>Tipo cuenta #2</option>
                                            <option>Tipo cuenta #3</option>
                                        </select>
                                        <button id="btnEditarCuenta" name="btnEditarCuenta" m-3 class="btn btn-primary" type="submit">Editar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*Eliminar cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingEliminarCuenta">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseEliminarCuenta" aria-expanded="false" aria-controls="collapseEliminarCuenta">
