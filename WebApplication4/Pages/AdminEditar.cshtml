                                    <input type="text" class="form-control m-3" id="formAgregarDiaCorteCuenta" placeholder="día de corte" />
                                    <input type="text" class="form-control m-3" id="formAgregarFechaCreacionCuenta" placeholder="fecha creación" />
                                    <select class="form-control" id="seleccionTipoCuentaAgregarCuenta">
