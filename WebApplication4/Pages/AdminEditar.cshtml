                                </form>
                            </div>
                        </div>
                    </div>

                    @*Editar cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingEditarCuenta">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseEditarCuenta" aria-expanded="false" aria-controls="collapseEditarCuenta">
                                    Editar cuenta
                                </button>
                            </h5>
                        </div>
