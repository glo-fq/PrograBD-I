@page
@model WebApplication4.Pages.AdminEditarModel
@{

    ViewData["Title"] = "Editar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    
}

@*Navegador*@
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-page="/Index">Inicio sesión</a></li>
        <li class="breadcrumb-item"><a asp-page="/Contact">Portal admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">Editar</li>
    </ol>
</nav>

<h2>@ViewData["Title"]</h2>

@*Estructura tipo acordeon para el display*@
<div class="accordion" id="accordionEditar">
    @*Tipos de cuenta*@
    <div class="card">
        <div class="card-header" id="headingTiposCuenta">
            <h5 class="mb-0">
                <button class="btn btn-primary btn-lg btn-block collapsed" type="button" data-toggle="collapse" data-target="#collapseTiposCuenta" aria-expanded="false" aria-controls="collapseTiposCuenta">
                    Tipos de Cuenta
                </button>
            </h5>
        </div>

        <div id="collapseTiposCuenta" class="collapse" aria-labelledby="headingTiposCuenta" data-parent="#accordionEditar">
            <div class="card-body">
                @*Tabla info tipos de cuenta*@
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Tasa interés anual</th>
                            <th scope="col">Saldo mínimo</th>
                            <th scope="col">Multa saldo mínimo</th>
                            <th scope="col">Multa saldo negativo</th>
                            <th scope="col">Cargo Servicio Mensual</th>
                            <th scope="col">Cant Max Op Manual</th>
                            <th scope="col">Cant Max Op ATM</th>
                            <th scope="col">Multa Op Manual</th>
                            <th scope="col">Multa Op ATM</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.tipoCuenta) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TasaInteresAnual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SaldoMinimo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultaSaldoMinimo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultaSaldoNegativo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CargoPorServicioMensual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantMaxOpManual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CantMaxOpATM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultaOpManual)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MultaOpATM)
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>

                @*Acordeon opciones de CRUD tipos de cuenta*@
                <div id="accordionCRUDTipos">
                    @*Agregar tipo de cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingAgregarTipo">
                            <h5 class="mb-0">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#collapseAgregarTipo" aria-expanded="true" aria-controls="collapseAgregarTipo">
                                    Agregar tipo de cuenta
                                </button>
                            </h5>
                        </div>
                        <div id="collapseAgregarTipo" class="collapse" aria-labelledby="headingAgregarTipo" data-parent="#accordion">
                            <div class="card-body">
                                <form>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <input asp-for="tipoCuentaAgregado.Nombre" type="text" class="form-control m-3" id="formAgregarNombreTipoCuenta" name="formAgregarNombreTipoCuenta" placeholder="nombre tipo de cuenta">
                                            <span asp-validation-for="tipoCuentaAgregado.Nombre" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.TasaInteresAnual" class="form-control m-3" id="formAgregarTasa" name="formAgregarTasa" placeholder="tasa interés anual" />
                                            <span asp-validation-for="tipoCuentaAgregado.TasaInteresAnual" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.SaldoMinimo" class="form-control m-3" id="formAgregarSM" name="formAgregarSM" placeholder="saldo mínimo" />
                                            <span asp-validation-for="tipoCuentaAgregado.SaldoMinimo" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.MultaSaldoMinimo" class="form-control m-3" id="formAgregarMSM" name="formAgregarMSM" placeholder="multa saldo mínimo" />
                                            <span asp-validation-for="tipoCuentaAgregado.MultaSaldoMinimo" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.MultaSaldoNegativo" class="form-control m-3" id="formAgregarMSN" name="formAgregarMSN" placeholder="multa saldo negativo" />
                                            <span asp-validation-for="tipoCuentaAgregado.MultaSaldoNegativo" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <input type="text" asp-for="tipoCuentaAgregado.CargoPorServicioMensual" class="form-control m-3" id="formAgregarCSM" name="formAgregarCSM" placeholder="cargo servicio mensual" />
                                            <span asp-validation-for="tipoCuentaAgregado.CargoPorServicioMensual" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.CantMaxOpManual" class="form-control" id="formAgregarCMOM" name="formAgregarCMOM" placeholder="cantidad max op manual" />
                                            <span asp-validation-for="tipoCuentaAgregado.CantMaxOpManual" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.CantMaxOpATM" class="form-control" id="formAgregarCMOA" name="formAgregarCMOA" placeholder="cantidad max op ATM" />
                                            <span asp-validation-for="tipoCuentaAgregado.CantMaxOpATM" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.MultaOpManual" class="form-control" id="formAgregarMOM" name="formAgregarMOM" placeholder="multa op manual" />
                                            <span asp-validation-for="tipoCuentaAgregado.MultaOpManual" class="text-danger"></span>

                                            <input type="text" asp-for="tipoCuentaAgregado.MultaOpATM" class="form-control" id="formAgregarMOA" name="formAgregarMOA" placeholder="multa op ATM" />
                                            <span asp-validation-for="tipoCuentaAgregado.MultaOpATM" class="text-danger"></span>
                                        </div>
                                    </div>
                        
                                    <input m-3 class="btn btn-success" type="submit" asp-page-handler="AddTipoCuenta" id="btnAgregarTipoCuenta" value="Agregar" name="btnAgregarTipoCuenta" />

                                </form>
                            </div>
                        </div>
                    </div>

                    @*Editar tipo de cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingEditarTipo">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseEditarTipo" aria-expanded="false" aria-controls="collapseEditarTipo">
                                    Editar tipo de cuenta
                                </button>
                            </h5>
                        </div>
                        <div id="collapseEditarTipo" class="collapse" aria-labelledby="headingEditarTipo" data-parent="#accordionCRUDTipos">
                            <div class="card-body">
                                <div class="form-group">
                                    <form>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <select class="form-control" id="seleccionEditarTipoCuenta">
                                                    @foreach (var item in Model.tipoCuenta)
                                                    {
                                                        <option>@Html.DisplayFor(modelItem => item.Nombre)</option>
                                                    }
                                                </select>
                                                <input type="text" class="form-control m-3" id="formEditarTasa" placeholder="tasa interés anual" />
                                                <input type="text" class="form-control m-3" id="formEditarSM" placeholder="saldo mínimo" />
                                                <input type="text" class="form-control m-3" id="formEditarMSM" placeholder="multa saldo mínimo" />
                                                <input type="text" class="form-control m-3" id="formEditarMSN" placeholder="multa saldo negativo" />
                                            </div>
                                            <div class="col-md-6">
                                                <input type="text" class="form-control m-3" id="formEditarCSM" placeholder="cargo servicio mensual" />
                                                <input type="text" class="form-control" id="formEditarCMOM" placeholder="cantidad max op manual" />
                                                <input type="text" class="form-control" id="formEditarCMOA" placeholder="cantidad max op ATM" />
                                                <input type="text" class="form-control" id="formEditarMOM" placeholder="multa op manual" />
                                                <input type="text" class="form-control" id="formEditarMOA" placeholder="multa op ATM" />
                                            </div>
                                        </div>
                                        
                                        
                                        <button m-3 class="btn btn-primary" type="submit">Editar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    @*Eliminar tipo de cuenta*@
                    <div class="card">
                        <div class="card-header" id="headingEliminarTipo">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseEliminarTipo" aria-expanded="false" aria-controls="collapseEliminarTipo">
                                    Eliminar tipo de cuenta
                                </button>
                            </h5>
                        </div>

                        <div id="collapseEliminarTipo" class="collapse" aria-labelledby="headingEliminarTipo" data-parent="#accordionCRUDTipos">
                            <div class="card-body">
                                <div class="form-group">
                                    <form class="form-inline">
                                        <select class="form-control" id="seleccionEliminarTipoCuenta">
                                            @foreach (var item in Model.tipoCuenta) {
                                                <option>@Html.DisplayFor(modelItem => item.Nombre)</option>
                                            }
                                        </select>
                                        <button m-3 class="btn btn-danger" type="submit">Eliminar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

